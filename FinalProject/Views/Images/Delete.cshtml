@model FinalProject.Models.Image

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<h4>Are you sure you want to delete this post?</h4>
<form id="confirm-form" asp-controller="Images" asp-action="Delete" asp-route-id="@Model.ImageID">
    <input asp-for="ImageID" readonly hidden/>
    <input type="submit" value="Yes, I'm Sure">
    <button asp-controller="Images" asp-action="Details" asp-route-id="@Model.ImageID">No, Don't delete</button>
</form>
    

